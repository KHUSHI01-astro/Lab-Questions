#include <stdio.h>

int main() {
    int n, i;
    float sum = 0.0;

    printf("Enter the number of terms: ");
    scanf("%d", &n);

    printf("Harmonic Series: ");
    for (i = 1; i <= n; i++) {
        printf("1/%d", i);
        if (i < n)
            printf(" + ");
        sum += 1.0 / i;
    }

    printf("\nSum of Harmonic Series = %.4f\n", sum);

    return 0;
}
