#include <stdio.h>

int main() {
    int n, i;
    float sum = 0.0;

    printf("Enter the number of terms: ");
    scanf("%d", &n);

    printf("Series: ");
    for (i = 1; i <= n; i++) {
        if (i % 2 == 0) {
            printf("-1/%d ", i);
            sum -= 1.0 / i;   
        } else {
            if (i != 1) printf("+");
            printf("1/%d ", i);
            sum += 1.0 / i; 
        }
    }

    printf("\nSum of the series = %.4f\n", sum);

    return 0;
}
